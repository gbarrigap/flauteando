<h1 class="title is-1 has-text-centered">
  Encuentro
  <%= @encuentro.version %>
</h1>

<div class="tabs is-centered is-medium is-boxed">
  <ul>
    <li class="<%= 'is-active' if controller_name == 'encuentros' %>">
      <%= link_to 'Generales', edit_admin_encuentro_path(@encuentro) %>
    </li>
    <li class="<%= 'is-active' if %w[conciertos presentaciones].include?(controller_name) %>">
      <%= link_to 'Conciertos', admin_encuentro_conciertos_path(@encuentro) %>
    </li>
    <li class="<%= 'is-active' if controller_name == 'fotos' %>">
      <%= link_to 'Galería', admin_encuentro_fotos_path(@encuentro) %>
    </li>
    <li class="<%= 'is-active' if controller_name == 'config' %>">
      <%= link_to 'Configuración', admin_encuentro_config_index_path(@encuentro) %>
    </li>
  </ul>
</div>
