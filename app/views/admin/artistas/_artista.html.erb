<%= form_with model: [:admin, @artista] do |form| %>

<div class="field is-horizontal">
  <div class="field-label is-normal">
    <%= form.label :nombre, class: 'label' %>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <%= form.text_field :nombre, class: 'input' %>
      </div>
    </div>
  </div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal">
    <%= form.label :bio, class: 'label' %>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <%= form.text_area :bio, class: 'textarea' %>
      </div>
    </div>
  </div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal">
    <%= form.label :foto, class: 'label' %>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <% if @artista.foto.attached? %>
        <%= image_tag @artista.foto.variant( combine_options: { resize: '400', crop: '400x400+0+0', gravity: 'north' } ), class: 'is-square' %>
        <% end %>
      </div>

      <% unless 'show' == params[:action] %>
        <div class="control">
          <div class="file">
            <label class="file-label">
              <%= form.file_field :foto, class: 'file-input' %>
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                  Examinar
                </span>
              </span>
            </label>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% unless 'show' == params[:action] %>
  <div class="field is-horizontal">
    <div class="field-label is-normal"></div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.button class: 'button is-link' %>
          <%= link_to 'Regresar', admin_artistas_path %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% end %>
