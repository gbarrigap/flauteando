div.field.has-addons {
  flex-flow: row wrap;
  margin-bottom: 0.25rem;

  & + .help {
    margin-top: 0;
    margin-bottom: 1rem;
  }
}

form {
  p + label,
  p + input {
    margin-top: 1rem;
  }
}

input#encuentro_version {
  width: 5rem;
}

body > div {
  display: grid;
  grid-template-rows: 4rem 1fr 10rem;
  min-height: 100vh;

  div.container {
    width: 100%;
  }
}
