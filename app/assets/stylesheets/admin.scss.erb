@import "font-awesome-sprockets";
@import "font-awesome";
@import "bulma"; // @import 'bulma-extensions';
// @import "selectr";

div.field.has-addons {
  flex-flow: row wrap;
  margin-bottom: 0.25rem;

  & + .help {
    margin-top: 0;
    margin-bottom: 1rem;
  }
}

form {
  p + input,
  p + label {
    margin-top: 1rem;
  }
}

input#encuentro_version {
  width: 5rem;
}

body > div {
  display: grid;
  grid-template-rows: 4rem 1fr 10rem;
  min-height: 100vh;

  div.container {
    width: 100%;
  }
}

form {
  width: 100%;

  label {
    margin-top: 1rem;
  }

  input#presentacion_orden {
    max-width: 10rem;
  }
}

.panel {
  .panel-block {
    &.with-data {
      flex-flow: wrap column;
      align-items: flex-start;
    }
  }
}
