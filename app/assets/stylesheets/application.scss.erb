.main-nav ul {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  list-style: none;
}

.main-nav a {
  font-size: 1.6rem;
  font-weight: bold;
  text-decoration: none;
  display: flex;
  color: #f8931f;
  font-family: 'Rubik Mono One', sans-serif;
}

.main-nav li a {
  padding: 1rem;
}

.main-nav a.active,
.main-nav a:focus,
.main-nav a:hover {
  background: #f8931f;
  color: black;
}

.main-nav a:focus svg,
.main-nav a:hover svg {
  fill: green;
}

.main-nav a:focus span,
.main-nav a:hover span {
  color: black;
}

div.main {
  grid-column: 1;
  grid-row: 2;
  /* display: grid;
   grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); */
  height: 100vh;
  overflow: auto;
}

div.main img {
  object-fit: cover;
  height: 350px;
  width: 100%;
  filter: grayscale(1) brightness(.9) contrast(1.5);
  cursor: pointer;
}

div.main img:hover {
  filter: grayscale(1) brightness(.9) contrast(1.2);
  transition: filter 500ms;
}

div.info {
  grid-column: 1;
  grid-row: 3;
  background-color: rgb(50, 210, 237);
  position: sticky;
  top: 0;
}

div.info img {
  width: 100%;
  height: 100vh;
  object-fit: cover;
  object-position: left top;
}

.hidden {
  display: none;
}

div#info-overlay {
  display: grid;
  grid-template-rows: 1fr 1fr 1fr;
  color: whitesmoke;
  background-color: white;
  position: sticky;
  height: 100vh;
  grid-column: 2;
  grid-row: 1;
  font-family: 'Lato', sans-serif;
  text-align: right;
  transition: opacity 500ms;
  z-index: 10;

  #close {
    position: absolute;
    top: 0;
    right: 0;
    background-color: rgb(209, 209, 209);
    color: rgba(0, 0, 0, 0.76);
    font-size: 2rem;
    padding: 4px;
    border-radius: 0.5rem;
    margin-top: 1rem;
    margin-right: 1rem;
    cursor: pointer;
    border: 3px solid #00000030;

    &:hover {
      border: 3px solid #00000030;
      background-color: white;
    }
  }
}

div#info-overlay.hidden {
  opacity: 0;
}

div#info-overlay.shown {
  opacity: 1;
}

div#info-overlay img {
  grid-column: 1;
  grid-row: 1/3;
  width: 100%;
  height: 100vh;
  object-fit: cover;
  object-position: left top;
}

#info-bio {
  grid-column: 1;
  grid-row: 3/4;
  display: flex;
  flex-wrap: wrap;
  justify-content: right;
  align-content: flex-end;
  background-color: rgba(1, 1, 1, 0.8);
  color: whitesmoke;
}

div#info-overlay h1 {
  padding: 2rem 4rem;
}

#info-overlay p {
  padding: 0 3rem 2rem;
}

div.container {
  display: grid;
  grid-template-columns: 3fr 2fr;
  grid-template-rows: 1fr;
  height: 100vh;
  overflow: hidden;
}

div.info {
  grid-column: 2;
  grid-row: 1;
  background-color: rgb(50, 210, 237);
  position: sticky;
  top: 0;
}
/*}*/
@media (width < 1200px) {
  div.container {
    grid-template-columns: 1fr 1fr;
  }
}
@media (width < 700px) {
  div#info,
  div#info-overlay {
    grid-column: 1;
    grid-row: 2;
  }

  div.container {
    grid-template-columns: 1fr;
    overflow: scroll;
  }
}
