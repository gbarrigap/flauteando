@media (width < 1200px) {
  div.container {
    grid-template-columns: 1fr 1fr;
  }
}
@media (width < 700px) {
  div#info,
  div#info-overlay {
    grid-column: 1;
    grid-row: 2;
  }

  div.container {
    grid-template-columns: 1fr;
    overflow: scroll;
  }
}
