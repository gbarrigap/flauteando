div.main {
  grid-column: 1;
  grid-row: 2;
  /* display: grid;
   grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); */
  height: 100vh; // Offending property!
  overflow: auto;
}

div.info {
  grid-column: 1;
  grid-row: 1;
  background-color: rgb(50, 210, 237);
  position: sticky;
  top: 0;
}

div.info img {
  width: 100%;
  height: 100vh;
  object-fit: cover;
  object-position: left top;
}

.hidden {
  display: none;
}

div#info-overlay {
  display: grid;
  grid-template-rows: 1fr 1fr 1fr;
  color: whitesmoke;
  background-color: white;
  position: sticky;
  // height: 100vh;
  grid-column: 1;
  grid-row: 1;
  font-family: 'Lato', sans-serif;
  text-align: right;
  transition: opacity 500ms;
  z-index: 10;

  #close {
    position: absolute;
    top: 0;
    right: 0;
    background-color: rgb(209, 209, 209);
    color: rgba(0, 0, 0, 0.76);
    font-size: 2rem;
    padding: 4px;
    border-radius: 0.5rem;
    margin-top: 1rem;
    margin-right: 1rem;
    cursor: pointer;
    border: 3px solid #00000030;

    &:hover {
      border: 3px solid #00000030;
      background-color: white;
    }
  }
}

div#info-overlay.hidden {
  opacity: 0;
}

div#info-overlay.shown {
  opacity: 1;
}

div#info-overlay img {
  grid-column: 1;
  grid-row: 1/3;
  width: 100%;
  // height: 100vh;
  object-fit: cover;
  object-position: left top;
}

div#info-overlay,
div#info-overlay img {
  height: calc(100vh - 4rem);
}

#info-bio {
  grid-column: 1;
  grid-row: 3/4;
  display: flex;
  flex-wrap: wrap;
  justify-content: right;
  align-content: flex-end;
  background-color: rgba(1, 1, 1, 0.8);
  color: whitesmoke;
}

div#info-overlay h1 {
  padding: 2rem 4rem;
}

#info-overlay p {
  padding: 0 3rem 2rem;
}

